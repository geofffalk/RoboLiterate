<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:minHeight="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:orientation="vertical"
                android:id="@+id/direction_controls"
                android:padding="10dp"
                android:background="@drawable/border"



                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="fill_parent"
                        android:background="@drawable/direction_up_3"
                        android:id="@+id/button_forward"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:background="@drawable/direction_left_3"
                        android:id="@+id/button_left"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="0dp"
                        android:id="@+id/robot_icon"
                        android:layout_height="fill_parent"
                        android:layout_weight="2"
                        android:padding="15dp"
                        android:scaleType="centerInside"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:background="@drawable/direction_right_3"
                        android:id="@+id/button_right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="fill_parent"
                        android:background="@drawable/direction_down_3"
                        android:id="@+id/button_back"

                        />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="2dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/motorA"
                    android:layout_marginRight="10dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="0"
                        android:background="@drawable/direction_up_2"
                        android:id="@+id/motorA_forward" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/A"
                        style="@style/CustomFont"
                        android:textStyle="bold"
                        android:textColor="@color/color3"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="0"
                        android:background="@drawable/direction_down_2"
                        android:id="@+id/motorA_back" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/motorB"
                    android:layout_marginRight="10dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="1"

                        android:background="@drawable/direction_up_2"
                        android:id="@+id/motorB_forward" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/B"
                        style="@style/CustomFont"
                        android:textStyle="bold"
                        android:textColor="@color/color3"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="1"

                        android:background="@drawable/direction_down_2"
                        android:id="@+id/motorB_back" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/motorC"
                    android:layout_marginRight="10dp">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="2"

                        android:background="@drawable/direction_up_2"
                        android:id="@+id/motorC_forward" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/C"
                        style="@style/CustomFont"
                        android:textStyle="bold"
                        android:textColor="@color/color3"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="2"

                        android:background="@drawable/direction_down_2"
                        android:id="@+id/motorC_back" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:id="@+id/motorD"
                  >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:tag="3"

                        android:background="@drawable/direction_up_2"
                        android:id="@+id/motorD_forward" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal|center_vertical"
                        android:text="@string/D"
                        style="@style/CustomFont"
                        android:textStyle="bold"
                        android:textColor="@color/color3"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:tag="3"

                        android:layout_weight="2"
                        android:background="@drawable/direction_down_2"
                        android:id="@+id/motorD_back" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


        <org.maskmedia.roboliterate.uicontroller.SpeedSlider
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:progress="50"
            android:id="@+id/speedSlider"

            />
    </LinearLayout>



