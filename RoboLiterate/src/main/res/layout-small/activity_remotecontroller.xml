<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:orientation="horizontal"
        android:minHeight="250dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:id="@+id/direction_controls"
        android:padding="0dp"



  >

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/direction_up"
            android:id="@+id/button_forward"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button_left"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:background="@drawable/direction_left"
            android:id="@+id/button_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/button" />

        <Button
            android:layout_width="60dp"
            android:layout_height="110dp"
            android:background="@drawable/direction_right"
            android:id="@+id/button_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button_forward" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:background="@drawable/direction_down"
            android:id="@+id/button_back"
            android:layout_toRightOf="@+id/button_left"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

   />



    </RelativeLayout>


        <org.maskmedia.roboliterate.uicontroller.SpeedSlider
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:progress="50"
            android:id="@+id/speedSlider"

            />
        </LinearLayout>



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:text="@string/operate_motor_arm"
            android:id="@+id/button_arm"
            android:width="200dp"
            style="@style/button3"
            android:layout_centerInParent="true"
            android:padding="5dp"/>


    </RelativeLayout>

